<%  if session[:user] %>
<h2>Add New Product</h2>
<% @product.errors.full_messages.each do|msg|%>
  <p><%= msg %></p>
<% end %>


<%= form_for @product do |p| %>
  <p><%= p.label :name %><br/>
  <%= p.text_field :name %></p>
  <p><%= p.label :price %><br/>
  <%= p.text_field :price %></p>
  <p><%= p.label :description %><br/>
  <%= p.text_field :description %></p>

  <p><%= p.label :category %>
    <%= p.collection_select(:category_id, Category.all, :id, :name , :prompt => "Select") %></p>
  
  <p><%= p.label :upload_image, "Upload Image" %>
    <%= p.file_field :upload_image %> </p>
  
  <%= p.submit "Submit" %>
<% end %>
<% else %>
  <h2 style ="color:red">User Must Be Login</h2>
   <h3><%= link_to "Login", {:action => :login, :controller => :users} %></h3>
<% end %>