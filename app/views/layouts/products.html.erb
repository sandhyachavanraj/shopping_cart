<!DOCTYPE html>
<html>
  <head>
    <title>Productapp</title>
    <%= stylesheet_link_tag 'products' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div id="container">
      <%= render :partial => 'layouts/header' %>
       <% if session[:user].admin == true %>
      <%= link_to "Welcome to admin", {:action => :admin, :controller => :products} %>
      <%end%>

      <div class="bottom"  >
        <%= render :partial => 'layouts/sidebar' %>
        
        <%=yield%>
      </div>
    </div>
  </body>
</html>