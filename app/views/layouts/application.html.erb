<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingCart</title>
    <%= stylesheet_link_tag    "products", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if session[:user] == "admin" %>
      <%= link_to "", {:action => :users, :controller => :products, :layout => "admin"} %>
    <% else %>
      <%= link_to  "", {:action => :users, :controller => :products, :layout => "products"} %>
    <%end%>
    <%= yield %>
  </body>
</html>
